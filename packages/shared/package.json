{
	"name": "@workspace/shared",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "tsc -b -v",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"./dist/**"
	],
	"publishConfig": {
		"access": "public"
	},
	"typesVersions": {
		"*": {
			"*": [
				"src/*"
			]
		}
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		},
		"./*": {
			"import": "./dist/*.js",
			"require": "./dist/*.js"
		}
	},
	"dependencies": {
		"@nestjs/mapped-types": "*",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"drizzle-orm": "^0.39.2",
		"pg": "^8.13.1"
	},
	"devDependencies": {
		"@types/node": "^22.10.7",
		"@types/pg": "^8.11.11",
		"@workspace/eslint-config": "workspace:*",
		"@workspace/typescript-config": "workspace:*",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.3"
	}
}
