{
	"extends": "@workspace/typescript-config/nestjs.json",
	"compilerOptions": {
		"baseUrl": "src",
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"paths": {
			"@workspace/shared/*": ["*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
